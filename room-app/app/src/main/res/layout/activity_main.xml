<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/manual_control"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/title"
        android:text="off" />

    <TextView
        android:id="@+id/light_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        android:text="Light room"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/light_title"
        android:text="off" />

    <TextView
        android:id="@+id/blinds_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/light_title"
        android:layout_marginTop="30dp"
        android:text="Blinds room"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <SeekBar
        android:id="@+id/seek_blinds"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/light_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/light_title"
        android:max="180"
        android:text="off" />


</RelativeLayout>